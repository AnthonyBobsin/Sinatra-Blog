<h3 class="noblack">Create Post</h3>
<form action="/posts" method="post">
	<label for="post_title">Title:</label> </br>
	<input id="post_title" name="post[title]" type="text" value="<%= @post.title %>" /> </br>

	<label for="post_author">Author:</label> </br>
	<input id="post_author" name="post[author]" type="text" value="<%= @post.author %>" /> </br>

	<label for="post_img">Image:</label> </br>
	<input id="post_img" name="post[img]" type="text" value="<%= @post.img %>" /> </br>
	<%# Add an image preview %>

	<label for="post_body">Body:</label> </br>
	<textarea id="post_body" name="post[body]" rows="5"><%= @post.body %></textarea> </br>

	<input type="submit" value="Create" />
</form>
